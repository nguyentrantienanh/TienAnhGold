@model TienAnhGold.Models.Gold

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<header class="bg-light py-4 mb-5">
    <h1 class="text-center fw-bold text-gold">@ViewData["Title"] - @Model.Name</h1>
</header>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card h-100 shadow-lg border-0 rounded-4 p-4">
                <h4 class="text-gold mb-4">Thông tin sản phẩm vàng</h4>
                <hr class="border-gold mb-4" />
                <dl class="row">
                    <dt class="col-sm-3 fw-bold text-dark">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-3 fw-bold text-dark">
                        Hình ảnh
                    </dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="Hình ảnh sản phẩm" class="img-fluid product-img mb-3" />
                        }
                        else
                        {
                            <div class="product-img placeholder mb-3">No Image</div>
                        }
                    </dd>
                    <dt class="col-sm-3 fw-bold text-dark">
                        @Html.DisplayNameFor(model => model.Material)
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        @Html.DisplayFor(model => model.Material)
                    </dd>
                    <dt class="col-sm-3 fw-bold text-dark">
                        @Html.DisplayNameFor(model => model.Weight)
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        @Html.DisplayFor(model => model.Weight)
                    </dd>
                    <dt class="col-sm-3 fw-bold text-dark">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-3 fw-bold text-dark">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-3 fw-bold text-dark">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                </dl>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-gold me-2">Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

